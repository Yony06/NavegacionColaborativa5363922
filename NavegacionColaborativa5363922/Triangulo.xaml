    <StackLayout>

        <!--<summary>
         Coloque 2 entry para pedir los datos, un boton para calcular los datos y un label para dar el resultado y una imagen alusiva al programa
     </summary>-->

        <Entry x:Name="alturaEntry" 
            Placeholder="Ingrese la altura" 
            HeightRequest="50" 
            WidthRequest="300"/>
        <Label/>
        <Entry x:Name="baseEntry" 
            Placeholder="Ingrese la base" 
            HeightRequest="50" 
            WidthRequest="300"/>
        <Label/>
        <Button Text="Calcular" 
             Clicked="OnCounterClicked"
             HeightRequest="50" 
             WidthRequest="300"/>
        <Label/>
        <Label x:Name="ResultadoLabel2"
            HeightRequest="50" 
            WidthRequest="300" 
            FontAttributes="Bold"/>

        <Image Source="superficie.jfif" 
            HorizontalOptions="Center" 
            VerticalOptions="Center" 
            HeightRequest="170" 
            WidthRequest="400"/>

    </StackLayout>
    
</ContentPage>